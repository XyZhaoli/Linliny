<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:right="15dp" android:top="15dp">
                <shape>
                    <solid android:color="#66000000" />
                    <corners android:radius="18dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="15dp" android:left="15dp">
                <shape>
                    <solid android:color="#4169E1" />
                    <corners android:radius="18dip"/><!-- #ff58bb52 -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

