<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ym_hui"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="订单一览"
        android:textColor="#000000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_message_remined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="来自邻里农园的一份订单请您确认无误后再进行付款"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="8dp"
        android:background="@drawable/list_shape"
        android:cacheColorHint="#00000000"
        android:divider="#F7F7F7"
        android:dividerHeight="24dp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_goods_num_shopping_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="共0件商品"
            android:textColor="#838B8B"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_goods_price_shopping_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="￥0.00"
            android:textColor="#EE7600"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <Button
            android:id="@+id/btn_pay_for"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/bt_lanxiao"
            android:padding="14dp"
            android:text="购买并付款"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_cancel_shopping_car_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/bt_huixiao"
            android:padding="14dp"
            android:text="取            消"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>