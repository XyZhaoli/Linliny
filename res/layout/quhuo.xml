<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="977dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ym_bai"
    android:orientation="vertical"
    android:padding="20dp" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plus_minus_shape"
        android:padding="15dp"
        android:ems="10"
        android:textSize="32sp"
        android:hint="请输入取货码"
        android:layout_margin="15dp"
        android:inputType="number"
        android:textColor="#000"
        android:textColorHint="#03A9F4" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp" >

        <TextView
            android:id="@+id/number_1"
            style="@style/number_keyboard"
            android:text="1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/number_2"
            style="@style/number_keyboard"
            android:text="2"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/number_3"
            style="@style/number_keyboard"
            android:text="3"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp" >

        <TextView
            android:id="@+id/number_4"
            style="@style/number_keyboard"
            android:text="4"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/number_5"
            style="@style/number_keyboard"
            android:text="5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/number_6"
            style="@style/number_keyboard"
            android:text="6"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp" >

        <TextView
            android:id="@+id/number_7"
            style="@style/number_keyboard"
            android:text="7"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/number_8"
            style="@style/number_keyboard"
            android:text="8"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/number_9"
            style="@style/number_keyboard"
            android:text="9"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp" >

        <TextView
            android:id="@+id/number_enter"
            style="@style/number_keyboard_enter"
            android:text="重输"
            android:textColor="#5B5B5B"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/number_0"
            style="@style/number_keyboard"
            android:text="0"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/number_clear_last"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/number_keyboard_selecter"
            android:padding="35dp"
            android:src="@drawable/sc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/bt_huangxiao"
            android:text="确      认"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1"
            android:background="@drawable/bt_hongxiao"
            android:text="取      消"
            android:layout_margin="20dp"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>